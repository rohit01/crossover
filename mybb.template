        "Engine" : "MySQL" ,
        "VPCSecurityGroups" : [ { "Ref" : "VPC" } ]
      }
    },

    "AlarmTopic" : {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "Subscription" : [ {
